@model WebApp.Models.Casts

@{
    ViewData["Title"] = "Edit";
}
<style media="screen">
    body {
        background-image: url( @ViewBag.backImg );
        height: 100%;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .bg-dark{
        background-color: @ViewBag.MainColor!important
    }
</style>
<h1>Edit casts</h1>

<h4>Casts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ActorID" class="control-label"></label>
                <br/>
                <select style="width: -webkit-fill-available;" class="search-select form-control" asp-for="ActorID" asp-items="ViewBag.ActorID"></select>
                <span asp-validation-for="ActorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CharacterID" class="control-label"></label>
                <br/>
                <select style="width: -webkit-fill-available;" class="search-select form-control" asp-for="CharacterID" asp-items="ViewBag.CharacterID"></select>
                <span asp-validation-for="CharacterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstAppereance" class="control-label"></label>
                <input asp-for="FirstAppereance" class="form-control" />
                <span asp-validation-for="FirstAppereance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastAppereance" class="control-label"></label>
                <input asp-for="LastAppereance" class="form-control" />
                <span asp-validation-for="LastAppereance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-seriesID="@Model.Character.SeriesID">Back to List</a>
</div>

<script>
    var $jsSelectActor = $(".search-select#ActorID");
	$jsSelectActor.select2({
		minimumInputLength: 2,
        ajax: {
            url: '/Actors/Search',
            data: function (term) {
                return {
                    "text": JSON.stringify(term.term),
                };
            },
            processResults: function (data) {
                return {
                    results: data
				}
  				
            },
			delay: 1000,
			width: 'resolve'
        }
    });
	var $jsSelectCharacter = $(".search-select#CharacterID");
	$jsSelectCharacter.select2({
		minimumInputLength: 2,
        ajax: {
            url: '/Characters/Search',
            data: function (term) {
                return {
                    "text": JSON.stringify(term.term),
					"seriesID" : JSON.stringify(@ViewBag.SeriesID)
                };
            },
            processResults: function (data) {
                return {
                    results: data
				}
  				
            },
			delay: 1000,
			width: 'resolve'
        }
    });
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
