@model IEnumerable<web_lab1_fandom.Models.Actors>

@{
    ViewData["Title"] = "Index";
}

<h1>Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row mb-4 wow fadeIn justify-content-center">
    @foreach (var item in Model)
    {
        <div class="flip-card card mb-3" style="display: inline-block; margin:10px">
            <div class="flip-card-inner">
                <div class="flip-card-back">
                    <img class="card-img-top flip-img" width="2" src="@item.Photo" alt="Card image cap" >
                    <div class="card-body" style="padding-top:0px">
                        <h5 class="card-title" style="margin-bottom:0px">as @item.Name</h5>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info">Info</a>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>