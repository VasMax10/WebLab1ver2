<h1>Characters of "@ViewBag.SeriesName"</h1>

<p>
    <a asp-action="Create" class="btn btn-warning ">Create New</a>
</p>
<p>
    <a asp-action="Index" asp-controller="Casts" asp-route-seriesID="@ViewBag.SeriesID" class="btn btn-primary ">To Cast</a>
</p>

<div class="row mb-4 wow fadeIn justify-content-center">
    @foreach (var item in Model)
    {
        <div class="flip-card card mb-3" style="display: inline-block; margin:10px">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <img class="card-img-top" src="@item.Photo" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                    </div>
                </div>
                <div class="flip-card-back">
                    <div class="card-body" style="padding-top:0px">
                        <h4 class="card-title" style="margin-bottom:0px"> @item.Name</h4>
                        <h5>Gender: @item.Gender</h5>
                        <h5>Birthyear: @item.Birthyear</h5>
                        <h5>Status: @item.Status</h5>
                        <h5>Information: @item.Info</h5>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info">Info</a>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" title="Delete" data-toggle="tooltip" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
